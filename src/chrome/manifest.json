{
  "name": "DiMe Browser Extension for Chrome",
  "author": "University of Helsinki, Mats Sj√∂berg <mats.sjoberg@helsinki.fi>",
  "manifest_version": 2,
  "description": "Logs your browsing history to DiMe",
  "homepage_url": "https://github.com/HIIT/dime-webextension",
  "version": "0.2.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },
  "options_ui": {
    "page": "dime.options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "dime",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["dime.content.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
      "scripts": [
        "dime.background.js"
      ],
      "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "dime.content.js",
    "dime.logger.js"
  ],
  "minimum_chrome_version": "33"
}
