{
    "name": "DiMe browser extension",
    "author": "University of Helsinki, Mats Sj√∂berg <mats.sjoberg@helsinki.fi>",
    "version": "0.1",
    "description": "Logs your browsing history to DiMe",
    "homepage_url": "https://github.com/HIIT/dime-webextension",
    "manifest_version": 2,

    "permissions": [
        "<all_urls>",
        "storage"
    ],

    "background": {
        "scripts": [
            "common.js",
            "background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    }
}
